#!/bin/bash

# Build the project
mkdir -p build
cd build
cmake ..
make
cd ..

# Kill any existing process on port 1234
echo "Checking for processes on port 1234..."
SERVER_PORT_PID=$(lsof -ti:1234)
if [ ! -z "$SERVER_PORT_PID" ]; then
    echo "Killing existing server on port 1234 (PID: $SERVER_PORT_PID)..."
    kill $SERVER_PORT_PID
    sleep 1
fi

# Start the server
./build/Server &
SERVER_PID=$!

# Start clients
for i in {1..4}; do
    ./build/Client &
    CLIENT_PIDS+=($!)
    sleep 1
done

# Wait for user input to terminate
read -p "Press Enter to terminate..."

# Gracefully stop the server and clients
kill -SIGINT $SERVER_PID
for pid in "${CLIENT_PIDS[@]}"; do
    kill -SIGINT $pid
done

# Wait for processes to finish
wait $SERVER_PID
for pid in "${CLIENT_PIDS[@]}"; do
    wait $pid
done

