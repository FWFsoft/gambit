#!/bin/bash
# Build the Gambit game engine
# Creates both Server and Client executables in the build/ directory

set -e

echo "Building Gambit..."

# Create build directory if it doesn't exist
mkdir -p build
cd build

# Configure with CMake
echo "Running CMake..."
cmake ..

# Build the project
echo "Building with make..."
make

echo "Build complete!"
echo "  Server: build/Server"
echo "  Client: build/Client"
